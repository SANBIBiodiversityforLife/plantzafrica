/* Adjust the background position when using this widget with a RTL langauge. */
.fivestar-doctors div.fivestar-widget-static .star span.off,
.fivestar-doctors div.fivestar-widget-static .star,
.fivestar-doctors div.fivestar-widget .star,
.fivestar-doctors div.fivestar-widget .star a,
.fivestar-doctors div.fivestar-widget .cancel,
.fivestar-doctors div.fivestar-widget .cancel a {
  background-position: right 0;
}
.fivestar-doctors div.fivestar-widget-static .star span.on {
  background-position: right -32px;
}
.fivestar-doctors div.fivestar-widget div.on a {
  background-position: right -16px;
}
.fivestar-doctors div.fivestar-widget div.hover a,
.fivestar-doctors div.rating div a:hover {
  background-position: right -32px;
}
