/**
 * Implements hook_menu().
 */
function pa_update_rukayausers_menu() {
  $items = array();

  //landing page route
  $items['reuben/rukayausers'] = array(
    'title' => 'Once-off change some users to contributors',
    'page callback' => 'pa_update_rukayausers_landing_page',
    'access arguments' => array('administer taxonomy'),
    'type' => MENU_CALLBACK,
  );

  //perform import route
  $items['reuben/rukayausers/import'] = array(
    'title' => 'Performing import...',
    'page callback' => 'pa_update_rukayausers_import_callback',
    'access arguments' => array('administer taxonomy'),
    'type' => MENU_CALLBACK,
  );

  return $items;
}

/**
 * Callback for Reubens landing page.
 */
function pa_update_rukayausers_landing_page(){

  $content = '<p>Click the link below to start the contributor users update</p>';
  $link = l('Start Import', 'reuben/rukayausers/import');
  $content .= $link;

  return array(
    '#markup' => $content,
  );
}

